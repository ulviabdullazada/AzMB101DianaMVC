@model PaginatonVM<IEnumerable<AdminProductListItemVM>>
@{
    ViewData["Title"] = "Index";
}
@section scripts{
    <script>
        $(".card").on("click", "#prod-pag a", function (e) {
            e.preventDefault();
            fetch($(this).attr('href'))
                .then(res => res.text())
                .then(data => { console.log(data); $(".area").html(data) })
        })
    </script>
}
