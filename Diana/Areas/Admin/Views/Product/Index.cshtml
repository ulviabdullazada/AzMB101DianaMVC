    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Sliders</h6>
        <a asp-action="Create" class="btn btn-outline-success">Create</a>
    </div>
    <div class="area">
        <partial name="_PaginationProductPartial" model="Model" />
    </div>
